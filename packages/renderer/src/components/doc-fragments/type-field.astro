---
import { fade } from 'astro:transitions';
import { DocType, DocTypeField } from '@flexydox/doc-schema';
import cx from 'classnames';
import { markDeprecated } from '../../astro-utils/mark-deprecated';
import DeprecationInfo from './deprecation-info.astro';
import Description from './description.astro';
import Required from './required.astro';
import Typeref from './type-ref.astro';
import TypeRef from './type-ref.astro';
const field: DocTypeField = Astro.props.field;
const showPopOver = Astro.props.showPopOver;
---

<style>
  .name {
    font-weight: bold;
  }
</style>
<div class="vertical-separator stack-s">
  <div>
    <span class:list={['name', markDeprecated(field.deprecationReason)]}>{field.name}</span>
    <span class="type-ref">
      <TypeRef showPopOver={showPopOver} typeRef={field.typeRef} />
    </span>

    <Required isRequired={field.typeRef.required} />
  </div>

  <Description>{field.description}</Description>

  {field.deprecationReason && <DeprecationInfo reason={field.deprecationReason} />}
</div>
