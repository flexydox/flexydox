{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "clean": {
      "dependsOn": ["^clean"],
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],

      "outputs": ["dist/**"]
    },
    "rebuild": {
      "dependsOn": ["clean", "build"]
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint"]
    },
    "test": {
      "dependsOn": ["build"],

      "inputs": ["src/**/*.ts"]
    },
    "e2e": {
      "dependsOn": ["build"]
    },

    "dev": {
      "cache": false,
      "persistent": true,
      "env": []
    }
  }
}
